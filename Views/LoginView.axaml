<UserControl
    x:Class="MyApp.Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:vm="clr-namespace:MyApp.ViewModels"
    xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
    x:DataType="vm:LoginViewModel"
    mc:Ignorable="d">
    <Border
        MinWidth="400"
        MinHeight="400"
        Padding="24,8,24,8"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="White"
        BorderBrush="#dde1e4"
        BorderThickness="1"
        CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                OffsetX="4"
                OffsetY="4"
                Opacity="0.3"
                Color="#808a93" />
        </Border.Effect>
        <StackPanel Margin="0,24,0,0" Spacing="10">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Text="Log in to our platform" />

            <TextBlock
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="Red"
                IsVisible="{Binding Error}"
                Text="{Binding Message}" />

            <!--  Username  -->
            <StackPanel>
                <TextBox
                    Margin="0,10,0,4"
                    wpf:TextFieldAssist.Hints="{Binding UsernameHint}"
                    wpf:TextFieldAssist.Label="Username"
                    Foreground="Gray"
                    Text="{Binding Username, Mode=TwoWay}"
                    UseFloatingWatermark="True"
                    Watermark="Enter your username">
                    <TextBox.KeyBindings>
                        <KeyBinding Command="{Binding EnterAction}" Gesture="Enter" />
                    </TextBox.KeyBindings>
                </TextBox>
            </StackPanel>

            <!--  Password  -->
            <StackPanel>
                <TextBox
                    Margin="0,10,0,4"
                    wpf:TextFieldAssist.Hints="{Binding PasswordHint}"
                    wpf:TextFieldAssist.Label="Password"
                    Foreground="Gray"
                    PasswordChar="â€¢"
                    Text="{Binding Password, Mode=TwoWay}"
                    UseFloatingWatermark="True"
                    Watermark="Enter your Password">
                    <TextBox.KeyBindings>
                        <KeyBinding Command="{Binding EnterAction}" Gesture="Enter" />
                    </TextBox.KeyBindings>
                </TextBox>
            </StackPanel>

            <!--  Remember Me and Lost Password  -->
            <DockPanel Margin="0,10,0,0">
                <CheckBox
                    VerticalAlignment="Center"
                    Content="Remember me"
                    IsChecked="{Binding RememberMe}" />
                <TextBlock
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Foreground="Blue"
                    Text="Lost Password?" />
            </DockPanel>

            <!--  Login Button  -->
            <Button
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="Blue"
                Command="{Binding ClickAction}"
                Content="Login to your account"
                Foreground="White" />

            <!--  Register Text  -->
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="12"
                Foreground="Gray">
                <Run Text="Not registered? " />
                <Run
                    Foreground="Blue"
                    Text="Create account"
                    TextDecorations="Underline" />
            </TextBlock>

        </StackPanel>
    </Border>
</UserControl>
