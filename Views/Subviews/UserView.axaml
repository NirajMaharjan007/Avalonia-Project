<UserControl
    x:Class="MyApp.Views.Subviews.UserView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:vm="clr-namespace:MyApp.ViewModels"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        Orientation="Vertical">
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TabControl.Items>
                <TabItem Header="Item 1">
                    <TextBlock Classes="Centered" Text="Page 1" />
                </TabItem>
                <TabItem Header="Item 2">
                    <TextBlock Classes="Centered" Text="Page 2" />
                </TabItem>
                <TabItem Header="Item 3">
                    <TextBlock Classes="Centered" Text="Page 3" />
                </TabItem>
            </TabControl.Items>
        </TabControl>

    </StackPanel>

</UserControl>
