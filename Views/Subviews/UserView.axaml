<UserControl
    x:Class="MyApp.Views.Subviews.UserView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:vm="clr-namespace:MyApp.ViewModels"
    xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        Orientation="Vertical">
        <TabControl
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            wpf:TabControlAssist.TabHeaderInactiveBrush="Transparent">
            <TabControl.Items>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="12">
                            <!--  Replace with your desired icon  -->
                            <icons:MaterialIcon
                                MinWidth="20"
                                MinHeight="20"
                                Kind="AccountPlus" />
                            <TextBlock VerticalAlignment="Center" Text="Create User" />
                        </StackPanel>
                    </TabItem.Header>


                    <StackPanel
                        x:Name="CreateUserForm"
                        Margin="12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                        <StackPanel
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBox
                                Margin="0,10"
                                Padding="12"
                                wpf:TextFieldAssist.Label="Email Address"
                                Classes="clearButton"
                                UseFloatingWatermark="True" />

                            <TextBox
                                Margin="0,10"
                                Padding="12"
                                wpf:TextFieldAssist.Label="Username"
                                Classes="clearButton"
                                UseFloatingWatermark="True" />
                            <Grid
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                ColumnDefinitions="*,*"
                                RowDefinitions="Auto">
                                <TextBox
                                    Grid.Column="0"
                                    Margin="0,10,8,10"
                                    Padding="12"
                                    wpf:TextFieldAssist.Label="Password"
                                    Classes="revealPasswordButton"
                                    PasswordChar="•"
                                    UseFloatingWatermark="True" />

                                <TextBox
                                    Grid.Column="1"
                                    Margin="8,10,0,10"
                                    Padding="12"
                                    wpf:TextFieldAssist.Label="Confirm Password"
                                    Classes="revealPasswordButton"
                                    PasswordChar="•"
                                    UseFloatingWatermark="True" />
                            </Grid>
                            <Grid
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                ColumnDefinitions="*,*"
                                RowDefinitions="Auto">
                                <TextBox
                                    Grid.Column="0"
                                    Margin="0,10,8,10"
                                    Padding="12"
                                    wpf:TextFieldAssist.Label="First Name"
                                    Classes="clearButton"
                                    UseFloatingWatermark="True" />

                                <TextBox
                                    Grid.Column="1"
                                    Margin="8,10,0,10"
                                    Padding="12"
                                    wpf:TextFieldAssist.Label="Last Name"
                                    Classes="clearButton"
                                    UseFloatingWatermark="True" />
                            </Grid>
                        </StackPanel>

                        <Button
                            Margin="0,20"
                            Padding="24,16"
                            HorizontalAlignment="Center"
                            Background="#1D4ED8"
                            Classes="rounded"
                            Foreground="White">
                            <Button.Content>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <icons:MaterialIcon
                                        MinWidth="20"
                                        MinHeight="20"
                                        Kind="CheckCircle" />
                                    <TextBlock Text="Submit" TextAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </TabItem>



                <TabItem Header="Item 2">
                    <TextBlock Classes="Centered" Text="Page 2" />
                </TabItem>
                <TabItem Header="Item 3">
                    <TextBlock Classes="Centered" Text="Page 3" />
                </TabItem>
            </TabControl.Items>
        </TabControl>

    </StackPanel>

</UserControl>
